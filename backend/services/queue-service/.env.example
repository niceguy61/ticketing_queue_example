PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# Queue Configuration
QUEUE_MODE=simple
LOBBY_CAPACITY=1000
PROCESSING_RATE=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY_MS=1000

# Message Queue Configuration
# Options: sqs, rabbitmq, kafka, redis
QUEUE_PROVIDER=sqs

# AWS SQS Configuration (for LocalStack or real AWS)
AWS_REGION=us-east-1
# For LocalStack, set AWS_ENDPOINT. For real AWS, leave it empty
AWS_ENDPOINT=http://localhost:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# RabbitMQ Configuration (alternative to SQS)
# RABBITMQ_URL=amqp://admin:password@localhost:5672

# Kafka Configuration (alternative to SQS/RabbitMQ)
# KAFKA_BROKERS=localhost:9092
# KAFKA_CLIENT_ID=queue-service
# KAFKA_GROUP_ID=queue-service-group

# Ticket Service Configuration
TICKET_SERVICE_URL=http://localhost:3002

# CORS Configuration
CORS_ORIGIN=*
